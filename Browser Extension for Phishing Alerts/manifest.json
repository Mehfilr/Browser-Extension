{
  "manifest_version": 3,
  "name": "URL Blocker",
  "description": "Block specific URLs based on a user-defined blocklist.",
  "version": "1.0",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
